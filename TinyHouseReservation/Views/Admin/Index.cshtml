@model List<TinyHouseReservations.Models.Kullanici>

<h2>Kullanıcı Listesi</h2>
<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Email</th>
            <th>Rol</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.Ad</td>
                <td>@k.Soyad</td>
                <td>@k.Email</td>
                <td>@k.RolID</td>
            </tr>
        }
    </tbody>
</table>
