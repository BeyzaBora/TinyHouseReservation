@model TinyHouseReservations.Models.Kullanici

@{
    ViewData["Title"] = "Kullanıcı Ekle";
}

<h2>Kullanıcı Ekle</h2>

<form asp-action="Ekle" method="post" class="form">
    <div class="form-group">
        <label>Ad:</label>
        <input asp-for="Ad" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Soyad:</label>
        <input asp-for="Soyad" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email:</label>
        <input asp-for="Email" type="email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Şifre:</label>
        <input asp-for="Sifre" type="password" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Rol:</label>
        <select asp-for="RolID" class="form-control" required>
            <option value="1">Admin</option>
            <option value="2">Ev Sahibi</option>
            <option value="3">Kiracı</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
